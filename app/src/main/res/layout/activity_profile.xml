<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <TextView
        android:id="@+id/text_LProfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lengkapi Profil"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/Primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="52dp"
        android:layout_marginStart="24dp"
        />

    <ImageView
        android:id="@+id/img_UProfil"
        android:layout_width="127dp"
        android:layout_height="121dp"
        android:src="@drawable/ic_uploadbutton"
        app:layout_constraintTop_toBottomOf="@id/text_LProfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        />

    <TextView
        android:id="@+id/text_UPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unggah Photo"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/Primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_UProfil"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/text_Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Lengkap"
        android:textSize="14sp"
        android:textColor="@color/Primary"
        app:layout_constraintTop_toBottomOf="@id/text_UPhoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        />

    <EditText
        android:id="@+id/shape_Username"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/shape_line_blue"
        android:inputType="text"
        android:ems="10"
        app:layout_constraintTop_toBottomOf="@id/text_Username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
        />

    <TextView
        android:id="@+id/text_TLahir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal Lahir"
        android:textSize="14sp"
        android:textColor="@color/Primary"
        app:layout_constraintTop_toBottomOf="@id/shape_Username"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        />

    <EditText
        android:id="@+id/shape_TLahir"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:paddingStart="14dp"
        android:background="@drawable/shape_line_blue"
        android:inputType="text"
        android:ems="10"
        android:hint="02/02/2000"
        android:textColorHint="#838A8F"
        app:layout_constraintTop_toBottomOf="@id/text_TLahir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
        />

    <TextView
        android:id="@+id/text_NoWhatsapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Whatsapp"
        android:textSize="14sp"
        android:textColor="@color/Primary"
        app:layout_constraintTop_toBottomOf="@id/shape_TLahir"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        />

    <EditText
        android:id="@+id/shape_NoWhatsapp"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:paddingStart="14dp"
        android:background="@drawable/shape_line_blue"
        android:inputType="text"
        android:ems="10"
        android:hint="0819 - xxx"
        android:textColorHint="#838A8F"
        app:layout_constraintTop_toBottomOf="@id/text_NoWhatsapp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
        />

    <TextView
        android:id="@+id/text_Alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alamat Domisili"
        android:textSize="14sp"
        android:textColor="@color/Primary"
        app:layout_constraintTop_toBottomOf="@id/shape_NoWhatsapp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        />

    <EditText
        android:id="@+id/shape_Alamat"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:paddingStart="14dp"
        android:background="@drawable/shape_line_blue"
        android:inputType="text"
        android:ems="10"
        android:hint="Isi alamat lengkap"
        android:textColorHint="#838A8F"
        app:layout_constraintTop_toBottomOf="@id/text_Alamat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
        />

    <TextView
        android:id="@+id/Lewati"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginStart="236dp"
        android:layout_marginEnd="72dp"
        android:text="Lewati"
        android:textColor="@color/Primary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/shape_Alamat"
    />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_next"
        android:layout_marginTop="38dp"
        android:layout_marginStart="311dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintStart_toEndOf="@+id/Lewati"
        app:layout_constraintTop_toBottomOf="@+id/shape_Alamat"
    />

    <Button
        android:id="@+id/button_Lanjut"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/Lewati"
        app:layout_constraintStart_toStartOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>