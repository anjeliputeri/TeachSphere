<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sertifikatutorsmp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/poppins_bold"
            android:text="SMP"
            android:textColor="@color/primarycolor"
            android:textSize="20dp">

        </TextView>

        <androidx.appcompat.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/searchview_background"
            app:iconifiedByDefault="false"
            app:queryHint="cari" />

        <androidx.cardview.widget.CardView
            android:layout_width="320dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mtk"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sertifikasi Matematika SMP"
                android:textColor="@color/primarycolor"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23 orang telah mendaftar"
                android:textColor="@color/primarycolor"
                android:fontFamily="@font/poppins"
                android:textSize="14dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp">
            </TextView>

            <Button
                android:layout_width="200dp"
                android:layout_height="28dp"
                android:background="@drawable/button_shape"
                android:layout_marginTop="60dp"
                android:text="Masuk"
                android:textColor="@color/buttoncolor"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp">

            </Button>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="320dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bahasa_inggris"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sertifikasi Bahasa Inggris SMP"
                android:textColor="@color/primarycolor"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 orang telah mendaftar"
                android:textColor="@color/primarycolor"
                android:fontFamily="@font/poppins"
                android:textSize="14dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp">
            </TextView>

            <Button
                android:layout_width="200dp"
                android:layout_height="28dp"
                android:background="@drawable/button_shape"
                android:layout_marginTop="60dp"
                android:text="Masuk"
                android:textColor="@color/buttoncolor"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp">

            </Button>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>
