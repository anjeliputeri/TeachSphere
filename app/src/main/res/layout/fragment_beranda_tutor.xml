<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".tutor.nav.ui.beranda.BerandaTutorFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cdHome"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:cardBackgroundColor="@color/primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivHome"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginStart="150dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="24dp"
                app:srcCompat="@drawable/home_tutor" />

            <TextView
                android:id="@+id/tvTemu"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="182dp"
                android:layout_marginBottom="110dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Share pengetahuanmu dengan menjadi tutor"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPilih"
                android:layout_width="125dp"
                android:layout_height="22dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="221dp"
                android:layout_marginBottom="88dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/mulai_sekarang"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvTutor"
            android:layout_width="158dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="232dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Keterampilan"
            android:textColor="@color/primary"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cdHome" />

        <HorizontalScrollView
            android:id="@+id/svTutor"
            android:layout_width="match_parent"
            android:layout_height="107dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTutor"
            tools:ignore="SpeakableTextPresentCheck">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgKeterampilan"
                    android:src="@drawable/english"
                    android:layout_marginStart="10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <TextView
                    android:textColor="@color/primary"
                    android:fontFamily="@font/poppins"
                    android:text="Bahasa Inggris"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imgKeterampilan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/tvBimbingan"
            android:layout_width="158dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="232dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Ujian Sertifikasi"
            android:textColor="@color/primary"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/svTutor" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvBimbingan"
            tools:ignore="SpeakableTextPresentCheck">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="100dp">

                <ImageView
                    android:id="@+id/ivSdTutor"
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/sd" />

                <ImageView
                    android:id="@+id/ivSmpSiswa"
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="37dp"
                    app:srcCompat="@drawable/smp" />

                <ImageView
                    android:id="@+id/ivSmaSiswa"
                    android:layout_width="180dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="37dp"
                    android:layout_marginEnd="37dp"
                    app:srcCompat="@drawable/sma" />

            </LinearLayout>
        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>