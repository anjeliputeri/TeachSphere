<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SigninSiswa">

    <ImageView
        android:id="@+id/img_2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/logoteachsphere" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:layout_below="@+id/img_2"
        android:padding="30dp"
        android:id="@+id/linear">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@drawable/button_outline"
            android:hint="Email"
            android:textColorHint="@color/primarycolor"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:id="@+id/edit_email"
            android:drawableRight="@drawable/user"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@drawable/button_outline"
            android:layout_marginTop="20dp"
            android:hint="Kata sandi"
            android:paddingStart="20dp"
            android:paddingEnd="15dp"
            android:id="@+id/edit_kata_sandi"
            android:textColorHint="@color/primarycolor"
            android:drawableRight="@drawable/password"/>

    </LinearLayout>

    <Button
        android:id="@+id/button_signinsiswa"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        android:layout_centerHorizontal="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/masuk"
        android:textColor="@color/buttoncolor"
        android:textSize="20sp">

    </Button>

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_signinsiswa"
        android:layout_centerHorizontal="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_signinsiswa"
        android:fontFamily="@font/poppins"
        android:text="@string/buatAkun"
        android:textColor="@color/primarycolor">

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>