<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tutor.StartTest">
    
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_back_blue"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/tvMulai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mulai Ujian"
        android:textColor="@color/primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="32dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="315dp"
        android:layout_height="558dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMulai"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="13dp"
        app:cardBackgroundColor="@color/grey">
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cdStart"
        android:layout_width="312dp"
        android:layout_height="555dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMulai"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="13dp"
        app:cardBackgroundColor="@color/white">

        <TextView
            android:id="@+id/tvCatatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Catatan:"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/primary"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/poppins_medium"
            android:text="1. Soal yang diberikan disesuaikan dengan bidang yang telah kamu pilih pada tahap registrasi\n2. Soal berupa pilihan ganda\n3. Kamu diberikan waktu 10 menit untuk menyelesaikan 20 soal\n4. Diharapkan jujur selama proses penyelesaian soal "
            android:textColor="@color/primary"
            android:justificationMode="inter_word"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/ivStart"
            android:layout_width="280dp"
            android:layout_height="250dp"
            android:src="@drawable/img_start"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="230dp"/>

        <Button
            android:id="@+id/bStart"
            android:layout_width="273dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="500dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Mulai"
            android:textSize="16sp"
            tools:ignore="TouchTargetSizeCheck" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>