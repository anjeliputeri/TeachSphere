<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".siswa.ChatFinishTutor">

    <View
        android:id="@+id/view4"
        android:layout_width="226dp"
        android:layout_height="43dp"
        android:background="@drawable/chat_bubble"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view2"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"/>

    <View
        android:id="@+id/view5"
        android:layout_width="158dp"
        android:layout_height="43dp"
        android:background="@drawable/chat_bubble"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view4"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"/>

    <View
        android:id="@+id/view7"
        android:layout_width="123dp"
        android:layout_height="43dp"
        android:background="@drawable/chat_bubble"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view5"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"/>

    <View
        android:id="@+id/view8"
        android:layout_width="188dp"
        android:layout_height="98dp"
        android:background="@drawable/chat_bubble"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view7"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Yura"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintTop_toTopOf="@id/view2"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="79dp"
        android:layout_height="79dp"
        app:srcCompat="@drawable/photo_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageButton5"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Permisi, saya mau tanya"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="@+id/view4"
        app:layout_constraintStart_toStartOf="@+id/view4"
        app:layout_constraintTop_toTopOf="@+id/view4"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Iya Silahkan"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/view5"
        app:layout_constraintEnd_toEndOf="@+id/view5"
        app:layout_constraintStart_toStartOf="@+id/view5"
        app:layout_constraintTop_toTopOf="@+id/view5"
        tools:ignore="HardcodedText,MissingConstraints,VisualLintOverlap" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="169dp"
        android:layout_height="51dp"
        android:fontFamily="@font/poppins"
        android:text="Berminat menjadi siswa saya?"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/view8"
        app:layout_constraintTop_toTopOf="@id/view8"
        app:layout_constraintEnd_toEndOf="@id/view8"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="23dp"
        android:layout_height="22dp"
        android:fontFamily="@font/poppins"
        android:text="Ya"
        android:textColor="@color/green_ya"
        app:layout_constraintTop_toBottomOf="@id/textView10"
        app:layout_constraintStart_toStartOf="@id/view8"
        app:layout_constraintBottom_toBottomOf="@id/view8"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="42dp"
        android:layout_height="21dp"
        android:fontFamily="@font/poppins"
        android:text="Tidak"
        android:textColor="@color/red_like"
        app:layout_constraintTop_toBottomOf="@id/textView10"
        app:layout_constraintEnd_toEndOf="@id/view8"
        app:layout_constraintBottom_toBottomOf="@id/view8"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Oke"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/view7"
        app:layout_constraintEnd_toEndOf="@+id/view7"
        app:layout_constraintStart_toStartOf="@+id/view7"
        app:layout_constraintTop_toTopOf="@+id/view7"/>

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="45dp"
        android:layout_height="47dp"
        android:background="@drawable/back_butt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>