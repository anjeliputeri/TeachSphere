<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/registrasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="16dp"
        android:text="Registrasi"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/primarycolor"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:layout_below="@id/registrasi"
        android:padding="30dp"
        android:id="@+id/linear">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@drawable/button_outline"
            android:hint="Email"
            android:textColor="@color/primarycolor"
            android:paddingLeft="30dp"
            android:id="@+id/edit_email"
            android:drawableRight="@drawable/User"
            android:drawablePadding="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:background="@drawable/button_outline"
            android:layout_marginTop="20dp"
            android:hint="kata sandi"
            android:paddingLeft="20dp"
            android:id="@+id/edit_kata_sandi"
            android:textColor="@color/primarycolor"
            android:drawableRight="@drawable/password"
            android:drawablePadding="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pilihandaftar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:orientation="vertical"
    android:layout_below="@id/linear"
        android:layout_marginStart="30dp"
    android:padding="10dp">

        <TextView
            android:id="@+id/daftarsebagai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar sebagai"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:textColor="@color/primarycolor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Tutor"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:textColor="@color/primarycolor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Siswa"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:textColor="@color/primarycolor"/>


    </LinearLayout>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pilihandaftar"
        android:background="@drawable/button_shape"
        android:layout_marginTop="100dp"
        android:text="DAFTAR"
        android:fontFamily="@font/poppins_bold"
        android:textSize="20dp"
        android:textColor="@color/buttoncolor"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_signinsiswa">

    </Button>


</RelativeLayout>